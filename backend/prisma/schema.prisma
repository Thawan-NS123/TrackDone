generator client {
  provider = "prisma-client-js"
  output   = "../generated"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  name          String
  phone         String
  cpf           String    @unique
  birthDate     DateTime
  gender        String
  position      String
  email         String 
  password      String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
   tasks     Task[]
}

model Task {
  id          String    @id @default(uuid())
  title       String
  description String?
  responsible String?
  status      String?
  dueDate     DateTime?
  priority    Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
    // This is the new field that will store the user's ID.
  idResponsible String

  // This is the relation field that links a Task to a User.
  responsibleUser User      @relation(fields: [idResponsible], references: [id])
}
